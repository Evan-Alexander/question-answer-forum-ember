{{#if editQuestionForm}}
  <h1>Edit {{question.author}}'s {{question.title}}</h1>
  <div class="well" id="edit-question-form">
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="content">Post Question</label>
        {{textarea class="form-control" value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{textarea class="form-control" value=notes id="notes" placeholder=question.notes}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input class="form-control" value=image id="image" placeholder=question.image}}
      </div>

      <button class="btn" {{action 'edit' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button id="edit-question" class="btn" {{action 'editQuestionForm'}}>Edit Quesion</button>
{{/if}}
