{{#if addNewAnswer}}
<h1>Answer a question</h1>
  <div class="well" id="answer-form">
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" class="form-control"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
