{{#if addNewAnswer}}
  <div class="well" id="new-answer-form">
    <h1>Submit Answer</h1>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" class="form-control"}}
      </div>
      <button class="btn" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
